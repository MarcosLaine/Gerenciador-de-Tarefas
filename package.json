{
  "name": "gerenciador-de-tarefas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:hosting": "node dev-hosting.js",
    "show:ip": "node show-local-ip.js",
    "dev:backend": "cd LembretesApi && dotnet watch run",
    "dev:backend:hosting": "cd LembretesApi && dotnet watch run --urls http://0.0.0.0:5285",
    "dev:frontend": "cd frontend && npm run dev -- --host",
    "dev:frontend:hosting": "cd frontend && npm run dev:hosting",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd LembretesApi && dotnet build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "clean": "cd LembretesApi && dotnet clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "web-push": "^3.6.7"
  }
}
